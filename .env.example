# ========================================
# BookingHub Platform - Environment Variables
# ========================================

# ----------------------------------------
# Database Configuration
# ----------------------------------------
# Development (SQLite)
DATABASE_URL="file:./dev.db"

# Production (PostgreSQL) - Use one of these:
# DATABASE_URL="postgresql://user:password@localhost:5432/bookinghub"
# DATABASE_URL="postgresql://user:password@aws-rds-endpoint:5432/bookinghub"
# DATABASE_URL="postgresql://user:password@supabase-project.supabase.co:5432/postgres"

# ----------------------------------------
# NextAuth.js Configuration
# ----------------------------------------
NEXTAUTH_URL="http://localhost:3002"
NEXTAUTH_SECRET="your-secret-key-min-32-characters-long-change-this-in-production"

# ----------------------------------------
# OAuth Providers
# ----------------------------------------
# Google OAuth (Get from: https://console.cloud.google.com/)
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Facebook OAuth (Get from: https://developers.facebook.com/)
FACEBOOK_CLIENT_ID="your-facebook-app-id"
FACEBOOK_CLIENT_SECRET="your-facebook-app-secret"

# ----------------------------------------
# Google APIs
# ----------------------------------------
# Google Maps & Places API (Get from: https://console.cloud.google.com/)
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY="your-google-maps-api-key"
GOOGLE_PLACES_API_KEY="your-google-places-api-key"

# ----------------------------------------
# Payment Gateways
# ----------------------------------------
# Razorpay (Get from: https://dashboard.razorpay.com/)
RAZORPAY_KEY_ID="your-razorpay-key-id"
RAZORPAY_KEY_SECRET="your-razorpay-key-secret"
NEXT_PUBLIC_RAZORPAY_KEY_ID="your-razorpay-key-id"

# Cashfree (Optional)
CASHFREE_APP_ID="your-cashfree-app-id"
CASHFREE_SECRET_KEY="your-cashfree-secret-key"

# PayU (Optional)
PAYU_MERCHANT_KEY="your-payu-merchant-key"
PAYU_MERCHANT_SALT="your-payu-merchant-salt"

# ----------------------------------------
# Email Service
# ----------------------------------------
# Resend (Get from: https://resend.com/)
RESEND_API_KEY="your-resend-api-key"
EMAIL_FROM="BookingHub <noreply@yourdomain.com>"

# SendGrid (Alternative)
# SENDGRID_API_KEY="your-sendgrid-api-key"

# ----------------------------------------
# File Storage
# ----------------------------------------
# AWS S3
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_REGION="ap-south-1"
AWS_S3_BUCKET="bookinghub-uploads"

# Cloudinary (Alternative)
# CLOUDINARY_CLOUD_NAME="your-cloud-name"
# CLOUDINARY_API_KEY="your-api-key"
# CLOUDINARY_API_SECRET="your-api-secret"

# ----------------------------------------
# SMS Service
# ----------------------------------------
# Twilio
TWILIO_ACCOUNT_SID="your-twilio-account-sid"
TWILIO_AUTH_TOKEN="your-twilio-auth-token"
TWILIO_PHONE_NUMBER="+1234567890"

# ----------------------------------------
# Monitoring & Analytics
# ----------------------------------------
# Sentry (Error Tracking)
NEXT_PUBLIC_SENTRY_DSN="your-sentry-dsn"
SENTRY_AUTH_TOKEN="your-sentry-auth-token"

# Google Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID="G-XXXXXXXXXX"

# Vercel Analytics (Auto-enabled on Vercel)
# No configuration needed

# ----------------------------------------
# Redis (Caching)
# ----------------------------------------
REDIS_URL="redis://localhost:6379"
# Or Redis Cloud: redis://default:password@redis-endpoint:port

# ----------------------------------------
# Application Configuration
# ----------------------------------------
NODE_ENV="development"
# NODE_ENV="production"

# App URL
APP_URL="http://localhost:3002"
# APP_URL="https://yourdomain.com"

# API Rate Limiting
RATE_LIMIT_MAX="100"
RATE_LIMIT_WINDOW="900000"

# ----------------------------------------
# Feature Flags
# ----------------------------------------
ENABLE_GOOGLE_PLACES="false"
ENABLE_EMAIL_NOTIFICATIONS="false"
ENABLE_SMS_NOTIFICATIONS="false"
ENABLE_PUSH_NOTIFICATIONS="false"

# ----------------------------------------
# Third-Party Integrations
# ----------------------------------------
# Amadeus (Flight API)
AMADEUS_API_KEY="your-amadeus-api-key"
AMADEUS_API_SECRET="your-amadeus-api-secret"

# Skyscanner (Alternative)
SKYSCANNER_API_KEY="your-skyscanner-api-key"

# ----------------------------------------
# Security
# ----------------------------------------
# Encryption Key (Generate with: openssl rand -base64 32)
ENCRYPTION_KEY="your-encryption-key-32-characters"

# JWT Secret (Generate with: openssl rand -base64 32)
JWT_SECRET="your-jwt-secret-32-characters"

# ----------------------------------------
# Development Only
# ----------------------------------------
# Prisma Studio
# PRISMA_STUDIO_PORT="5555"

# Debug Mode
DEBUG="false"

# ========================================
# IMPORTANT NOTES:
# ========================================
# 1. Never commit this file with real values to version control
# 2. Use different values for development, staging, and production
# 3. Rotate secrets regularly (every 90 days recommended)
# 4. Use environment-specific .env files (.env.local, .env.production)
# 5. For production, set these in your hosting platform (Vercel, AWS, etc.)
# 6. Generate strong secrets using: openssl rand -base64 32
# ========================================
